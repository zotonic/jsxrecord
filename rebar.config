{require_min_otp_vsn, "21"}.

{deps, [
    {euneus, "0.6.0"}
]}.

{dialyzer, [
    {plt_extra_apps, [euneus]}
]}.

{erl_opts, [
    debug_info,
    warn_unused_vars,
    warn_shadow_vars,
    warn_unused_import
]}.

{profiles, [
    {test, [
        {xref_checks, [
            undefined_function_calls,
            locals_not_used,
            deprecated_function_calls
        ]},

        {xref_ignores, [
        ]},

        {dialyzer, [
          {warnings, [
              no_return
          ]}
        ]}
    ]}
]}.

{project_plugins, [rebar3_ex_doc]}.

{hex, [{doc, ex_doc}]}.

{ex_doc, [
    {source_url, <<"https://github.com/zotonic/jsxrecord">>},
    {extras, [<<"README.md">>, <<"LICENSE">>]},
    {main, <<"readme">>}
]}.

